{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "required": [
    "name",
    "value_type",
    "file_relationship"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "value_type": {
      "type": "string",
      "enum": [
        "PAIR",
        "LIST"
      ]
    },
    "input_files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "InputFile.json#"
      }
    },
    "file_relationship": {
      "oneOf": [
          {"$ref": "FileRelationship.json#"},
          {"type": "object", "additionalProperties": false, "properties": {}}
        ]
      }
    }
  }
