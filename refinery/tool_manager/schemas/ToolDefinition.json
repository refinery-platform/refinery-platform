{
  "$schema": "http://json-schema.org/draft-04/schema",
  "oneOf":[
    {
      "required": [
        "name",
        "description",
        "file_relationship",
        "parameters"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "file_relationship": {
          "$ref": "tool_manager/schemas/FileRelationship.json#"
        },
        "parameters": {
          "type": "array",
          "items": {
            "$ref": "tool_manager/schemas/GalaxyParameter.json#"
          }
        },
        "tool_type":{
          "type": "string",
          "enum": ["WORKFLOW"]
        }
      }
    },
    {
      "required": [
        "name",
        "description",
        "file_relationship",
        "parameters",
        "extra_directories",
        "container_input_path",
        "image_name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "file_relationship": {
          "$ref": "tool_manager/schemas/FileRelationship.json#"
        },
        "parameters": {
          "type": "array",
          "items": {
            "$ref": "tool_manager/schemas/Parameter.json#"
          }
        },
        "tool_type":{
          "type": "string",
          "enum": ["VISUALIZATION"]
        },
        "container_input_path": {
          "type": "string"
        },
        "extra_directories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "image_name": {
          "type": "string"
        }
      }
    }
  ]
}
