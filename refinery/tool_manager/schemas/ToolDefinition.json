{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",

  "required": [
    "name",
    "description",
    "tool_type",
    "file_relationship"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tool_type": {
      "type": "string",
      "enum": [
        "WORKFLOW",
        "VISUALIZATION"
      ]
    },
    "file_relationship": {
      "$ref": "FileRelationship.json#"
    },
    "output_files": {
      "type": "array",
      "items": {
       "$ref": "OutputFile.json#"
      }
    },
    "parameters": {
      "type": "array",
      "items": {
        "oneOf": [
          {"$ref": "Parameter.json#"},
          {"$ref": "GalaxyParameter.json#"}
        ]
      }
    }
  }
}
