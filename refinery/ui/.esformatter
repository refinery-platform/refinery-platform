      "MemberExpressionClosing": "<2",
      "MemberExpressionOpening": "<2",
      "MemberExpressionPeriod": 0,
      "MethodDefinition": ">=1",
      "ObjectExpressionOpeningBrace": ">=1",
      "ObjectPatternClosingBrace": 0,
      "ObjectPatternComma": 0,
      "ObjectPatternOpeningBrace": 0,
      "Property": 0,
      "PropertyName": 0,
      "ReturnStatement": -1,
